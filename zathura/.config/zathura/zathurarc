# Configuration file for the zathura document viewer
# for more information check zathurarc(5)

# options - girara
set font                    'ComicShannsMono Nerd Font Mono 10'
set guioptions              "shv"

# options - zathura
set adjust-open             best-fit
set database                sqlite
set incremental-search      true
set page-v-padding          4
set page-h-padding          4
set recolor                 false
set scroll-full-overlap     0.2
set scroll-page-aware       true
set selection-clipboard     clipboard
set statusbar-home-tilde    true
set statusbar-page-percent  true
set window-title-basename   true
set window-title-page       true
set zoom-step               5

# emacs-ish bindings
map [normal] <C-g> abort
map [insert] <C-g> abort

map [normal] <C-b> scroll left
map [normal] <C-n> scroll down
map [normal] <C-p> scroll up
map [normal] <C-f> scroll right

map [normal] <C-a> scroll full-left
map [normal] <C-e> scroll full-right
map [normal] <Return> scroll full-down
map [normal] <Space> scroll full-down
map [normal] <BackSpace> scroll full-up

map [normal] <A-n> scroll full-down
map [normal] <A-p> scroll full-up

map [normal] <A-\>> goto bottom
map [normal] <A-\<> goto top

map [index] n navigate_index down
map [index] p navigate_index up
map [index] f navigate_index expand
map [index] b navigate_index collapse

# theme
include fibonacci-ruler
