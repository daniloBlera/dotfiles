# Configuration for the Swayimg viewer.
# For more information, check `man 5 swayimgrc`

[viewer]
window = #282828ff

[gallery]
window = #282828ff
shadow = #000000dd

[font]
color = #ffffffff
shadow = #00000000
background = #000000bb

[info]
show = no

[keys.viewer]
Shift+question = help
h = zoom height
w = zoom width
n = next_file
p = prev_file
comma = first_file
period = last_file
Shift+less = rotate_left
Shift+greater = rotate_right

[keys.gallery]
Shift+question = help
b = step_left
n = step_down
p = step_up
f = step_right
comma = first_file
period = last_file
