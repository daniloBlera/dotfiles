[viewer]
window = #282828ff
loop = no

[gallery]
pstore = no
window = #282828ff

[font]
color = #ffffffff
shadow = #00000000
background = #000000bb

[info]
show = no

[keys.viewer]
Shift+question = help
h = zoom height
w = zoom width
n = next_file
p = prev_file
h = flip_horizontal
v = flip_vertical
m = none
comma = first_file
period = last_file

[keys.gallery]
Shift+question = help
b = step_left
n = step_down
p = step_up
f = step_right
comma = first_file
period = last_file
